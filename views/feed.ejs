<%- include('partials/header') -%>
<!-- partials are small pieces of ejs code that yo ucan just reuse on where you include it -->
  <div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <!-- create an anchor tag for each post -->
              <img class="img-fluid" src="<%= posts[i].image%>">
              <!-- for whaever post show an images tag on the page  -->
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>